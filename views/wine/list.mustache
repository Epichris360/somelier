      !-->
        <section class="section">
            <div class="container">

                <div class="row gap-y">
            
                {{#wines}}
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="shop-item">
                        <a href="/wine-{{slug}}">
                            <div class="item-details">
                                <div>
                                    <h5>{{name}}</h5>
                                </div>

                                <div class="item-price"><span class="unit">$</span>{{price}}</div>
                            </div>
                            <img src="{{images}}" alt="product">
                        </a>

                        {{#vertexSession.user.canEdit}}
                            <a href="/edit-wine-{{slug}}" 
                                style="margin-top:10px"
                                class="btn btn-outline btn-warning" 
                            >Edit</a>
                        {{/vertexSession.user.canEdit}}
                        </div>
                    </div>
                {{/wines}}
           
                </div>

            </div>
        </section>


        <div style="padding:15px" >
            <a class="btn btn-white {{pgLinks.backward.class}}" href="/wines?page={{pgLinks.backward.num}}" ><i class="ti-arrow-left fs-9 mr-4"></i> Backwards</a>

            <a class="btn btn-white {{pgLinks.forward.class}} pull-right" href="/wines?page={{pgLinks.forward.num}}">Forwards <i class="ti-arrow-right fs-9 ml-4"></i></a>
        </div>

    </main>
    <!-- END Main container -->


