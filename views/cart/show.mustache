{{>top}}
    <body>
        {{>navbar}}


        <!-- Header -->
        <header class="header header-inverse bg-fixed" style="background-image: url(img/bg-wine-rack.png)" data-overlay="8">
            <div class="container text-center">
                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2">
                        <h1>Cart Overview</h1>
                        <p class="fs-20 opacity-70">Take a look inside your cart. Make sure you have everything you needed.</p>
                    </div>
                </div>
            </div>
        </header>
        <!-- END Header -->

        <!-- Main container -->
        <main class="main-content">
            <section class="section">
                <div class="container">
                    <form action="/update-cart" method="POST" >
                        <div class="row gap-y">
                            {{>alerts}}
                            {{#showCart}}
                            <div class="col-12 col-lg-8">
                                <table class="table table-cart">
                                    
                                    {{#cart.items}}
                                        <tbody valign="middle">
                                            <tr>
                                                <td>
                                                    <a class="item-remove" href="/removeFromCart-{{slug}}"><i class="ti-close"></i></a>
                                                </td>
                            
                                                <td>
                                                    <a href="shop-single.html">
                                                        <img src="{{images}}" alt="...">
                                                    </a>
                                                </td>

                                                <td>
                                                    <h5>{{name}}</h5>
                                                </td>

                                                <td>
                                                    <label>Quantity</label>
                                                    <input class="form-control form-control-sm" type="text" name="qty[]" placeholder="Quantity" value="{{qty}}">
                                                    <input type="hidden" name="id[]" value="{{id}}" />
                                                </td>

                                                <td>
                                                    <h4 class="price">${{price}}</h4>
                                                </td>
                                            </tr>

                                        </tbody>
                                    {{/cart.items}}
                                </table>
                            </div>
                            {{/showCart}}
                            {{#showCart}}
                            <div class="col-12 col-lg-4">
                                <div class="cart-price">
                                    <div class="flexbox">
                                        <div>
                                            <p><strong>Subtotal:</strong></p>
                                            <p><strong>Shipping:</strong></p>
                                        </div>

                                        <div>
                                            <p>${{cart.total}}</p>
                                            <p>${{shipping}}</p>
                                        </div>
                                    </div>

                                    <hr>

                                    <div class="flexbox">
                                        <div>
                                            <p><strong>Total:</strong></p>
                                        </div>

                                        <div>
                                            <p class="fw-600">${{totalCost}}</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-right">
                                    <button class="btn btn-warning" type="submit">Update Cart! <i class="ti-angle-right fs-9"></i></button>
                                </div> 
                                <br />
                                <div class="text-right">
                                    
                                    <a href="/checkout" class="btn btn-primary">
                                        Proceed <i class="ti-angle-right fs-9"></i>
                                    </a>
                                    
                                </div>

                                    

                            </div>
                            {{/showCart}}
                            {{#showImg}}
                                <div class="col-12 col-lg-12" >
                                    <img src="img/emptyCart.jpg" alt="" >
                                </div>
                            {{/showImg}}

                        </div>
                    </form>
                </div>
            </section>
        </main>
        <!-- END Main container -->

        {{>footer}}
        {{>scripts}}

        <script type="text/javascript">
            $(function(){
                
            })
        </script>

    </body>
</html>